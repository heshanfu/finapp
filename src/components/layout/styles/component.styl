.form-line
  padding $m7 $m6
  margin-bottom $m9
  border-radius $m3
  text-align left
  border 1px solid var(--c-bg-6)

  &._text
    margin-bottom $m9
    padding 0
    border 0

    @media $media-laptop
      margin-bottom $m10

  &._p0
    padding 0
    margin 0
    margin-bottom $m10

    .v-input
    .v-input__slot
    .v-messages
      margin 0
      padding 0
      min-height 0

  &._clean
    border 0

.inputModal
  display flex
  align-items center
  justify-content space-between

  &._block
    display block
    text-align center

  &__content
    display flex
    align-items center

  &__value
    flex-grow 1

  &__icon
  &__label
    padding-top 3px
    color var(--c-font-4)
    line-height 18px
    font-weight 500

  &__icon
    display flex
    align-items center
    justify-content center
    height 32px
    font-size 32px

  &__label
    margin-left auto
    opacity .6
    font-size 10px
    text-transform uppercase

  &__name
    padding-left $m6

  &__color
    width 32px
    height 32px
