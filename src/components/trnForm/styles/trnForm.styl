.trnForm
  z-index 5
  position fixed
  bottom 0
  height auto

  @media $media-phone
    left 0
    width 100%

  @media $media-laptop
    right 10%
    top 10%
    bottom inherit
    height 100%

  &__overflow
    position fixed
    left 0
    bottom 0
    width 100%
    height 100%
    background var(--c-bg-overflow)

    @media $media-laptop
      opacity .8

  &__wrap
    position relative
    display flex
    flex-grow 1
    flex-flow column nowrap
    background var(--c-bg-4)

    /.theme-light &
      background var(--c-bg-2)

    @media $media-phone
      max-height calc(100vh - 24px)
      margin-left auto

    @media $media-laptop
      width 400px
      max-height calc(100vh - 100px)
      border 1px solid var(--c-bg-1)

  &__scroll
    overflow hidden
    overflow-y auto
    scrollbar()

  &__calendar
    padding $m7 0

    .categories
      padding-bottom 0

.trnFormAmount
  &__in
    padding $m8 $m7
    text-align right
    direction rtl

    ^[0]._expenses &
      color var(--c-expenses-1)

    ^[0]._incomes &
      color var(--c-incomes-1)

  &__type
    align-self center
    padding-bottom $m6

  &__value
    width 1000px
    overflow hidden
    overflow-x auto
    scrollbar()
    justify-self center
    typo-money()
    padding 0
    font-weight 500
    font-size 42px !important
    line-height 32px
    background none
    border none
    text-align right
    direction ltr

    ^[0]._expenses &
      color var(--c-expenses-1)

    ^[0]._incomes &
      color var(--c-incomes-1)


.formTitle
  padding 0 $m7
  padding-bottom $m7
  font-header-1()
  color var(--c-font-4)

.formCategories
  padding 0 $m6
  padding-bottom $m9

.formWallets
  padding 0 $m6
  padding-bottom $m10

.trnFormAmountPc
  &__types
    display flex
    justify-content space-between
    padding $m8 $m9
    padding-bottom $m5

  &__type
    padding $m6 $m7
    margin (- $m6) (- $m7)
    font-header-1()
    color var(--c-font-4)

    &:hover
      @media $media-laptop
        color var(--c-font-4)
        background var(--c-bg-5)

    &._active
      opacity 1
      color var(--c-font-2)

      &:hover
        @media $media-laptop
          background none

      &._incomes
        color var(--c-incomes-1)

      &._expenses
        color var(--c-expenses-1)

  &__input
    position relative

    &__value
      position relative
      z-index 2
      width 100%
      padding $m8 $m9
      color var(--c-font-2)
      font-header-1()
      font-weight 500
      font-size 36px
      text-align right
      background 0
      border 0

.trnFormAmount._incomes .trnFormAmountPc__input__value
    color var(--c-incomes-1)
.trnFormAmount._expenses .trnFormAmountPc__input__value
    color var(--c-expenses-1)

.trnFormAnimation
  &-enter-active
  &-leave-active
    opacity 1
    anim()

    @media $media-phone
      transform translate(0, 0)
      transition opacity 100ms ease-out, transform 200ms ease-out

    @media $media-laptop
      transform translate(0, 0)

  &-enter
  &-leave-to
    transition opacity 100ms ease-out, transform 200ms ease-out
    opacity 0

    @media $media-phone
      transform translate(0, 10px)

    @media $media-laptop
      transform translate(300px, 0)

  &-leave-to
    @media $media-phone
      transform translate(0, 100px)
