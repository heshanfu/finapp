.trnFormCalendar
  padding 0 $m8

.inlineCalendar
  padding 0 $m7
  padding-bottom $m7

  .vdp-datepicker__calendar
    width auto
    background none
    border 0

    header
      display flex
      justify-content space-between
      align-items center
      line-height 1
      padding-bottom $m7

      .prev
      .next
        margin 0
        padding $m6 $m9
        border 1px solid var(--c-bg-5)
        background none
        border-radius 3px
        anim()

        &.disabled
          opacity 0

        &:hover
          background none

      .prev:after
        border-right 10px solid var(--c-bg-9)

      .next:after
        border-left 10px solid var(--c-bg-9)

      .day__month_btn
      .month__year_btn.up
      span
        padding $m6 0
        margin 0 $m7
        font-header-1()
        border-radius $m3

        &:hover
          background none !important
          @media $media-laptop
            background var(--c-bg-6) !important

    .cell
      height 42px

    .cell.day-header
      height auto
      padding-bottom $m3
      line-height 1
      color rgb(117, 117, 117)

    .day
      position relative
      padding 0
      text-align center
      border 1px solid alpha(grey, .1)
      cursor pointer

    .today
      background var(--c-bg-5)
      color var(--c-font-1)

    .disabled
      color var(--c-font-4)

    .selected
      background var(--c-blue-1)
      color var(--c-font-1)
